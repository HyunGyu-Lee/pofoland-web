<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
    
    <!-- Default Layout -->
    <definition name="defaultLayout" template="/WEB-INF/tiles/layout/default.jsp">
        <put-attribute name="title" value="Trip Store" />
        <put-attribute name="header" value="/WEB-INF/tiles/layout/header.jsp" />
        <put-attribute name="body" value="" />
        <put-attribute name="footer" value="/WEB-INF/tiles/layout/footer.jsp" />
    </definition>
    
    <!-- Default Layout -->
    <definition name="loginLayout" template="/WEB-INF/tiles/layout/default.jsp">
        <put-attribute name="title" value="Trip Store" />
        <put-attribute name="header" value="/WEB-INF/tiles/layout/loginHeader.jsp" />
        <put-attribute name="body" value="" />
        <put-attribute name="footer" value="/WEB-INF/tiles/layout/footer.jsp" />
    </definition>
    
    <!-- 1Depth default layout -->
    <definition name="*" extends="defaultLayout">
        <put-attribute name="body" value="/WEB-INF/view/{1}.jsp" />
    </definition>
    
    <!-- 2Depth default layout -->
    <definition name="*/*" extends="defaultLayout">
        <put-attribute name="body" value="/WEB-INF/view/{1}/{2}.jsp" />
    </definition>
    
    <!-- 3Depth default layout -->
    <definition name="*/*/*" extends="defaultLayout">
        <put-attribute name="body" value="/WEB-INF/view/{1}/{2}/{3}.jsp" />
    </definition>
    
    <!-- 1Depth login layout -->
    <definition name="login/*/*" extends="loginLayout">
        <put-attribute name="body" value="/WEB-INF/view/{1}/{2}.jsp" />
    </definition>
    
</tiles-definitions>
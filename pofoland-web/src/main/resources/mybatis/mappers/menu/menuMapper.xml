<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.hst.pofoland.biz.menu.dao.MenuDAO">
    
    <!-- 전체 메뉴 목록 조회 -->
    <select id="findList" resultType="Menu">
        SELECT MENU_ID,
               UP_MENU_ID,
               MENU_NM,
               MENU_URL,
               MENU_ORDER,
               REG_DTM,
               REG_USER_NO,
               MOD_DTM,
               MOD_USER_NO
          FROM CO_MENU
        ORDER BY UP_MENU_ID ASC, MENU_ORDER ASC
    </select>
    
</mapper>